class Animal(Base):
    __tablename__ = 'Animal'
    id = db.Column(db.Integer, primary_key=True)
    type_of_anim = db.Column(db.String(100), nullable=False)
    suit = db.Column(db.String(50), nullable=False)
    age = db.Column(db.String(50), nullable=False)
    food = db.Column(db.String(50), nullable=False)
    suit = db.Column(db.String(50), nullable=False)
    habitat= db.Column(db.String(50), nullable=False)
    num_cage = db.Column(db.String(50), nullable=False)
